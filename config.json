{
    "project": {
        "arguments": {
            "project_name": "deployer.js",
            "author": "Gerkin",
            "documentation": {
                "base": {
                    "url": "http://deployer.gerkindevelopment.net",
                    "path": "/mnt/workdata/nodejs/documentation/deployer.js/"
                },
                "format": [
                    "%BASE%",
                    "%VERSION_MINOR%",
                    "%TYPE%"
                ],
                "resources": {
                    "url": "http://deployer.gerkindevelopment.net/resources",
                    "path": "/mnt/workdata/nodejs/documentation/deployer.js/resources/"
                }
            },
            "company": {
                "start": "2015",
                "name": "GerkinDevelopment"
            }
        },
        "commands": {
            "_default": {
                "awake": true,
                "command_group": false,
                "mode": "serie",
                "actions": [
                    {
                        "action": "exec",
                        "data": {
                            "command": "echo \"Welcome!\""
                        }
                    }
                ]
            },
            "release": {
                "arguments": {
                    "version": {
                        "type": "prompt"
                    }
                },
                "description": "Makes a release by pre-commiting on git, updating file versions, post-commit & push",
                "command_group": true,
                "mode": "serie",
                "actions": [
                    {
                        "action": "git",
                        "data": {
                            "actions": [
                                {
                                    "action": "commit",
                                    "data": {
                                        "message": "Pre-process release v%version%"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "action": "files-version",
                        "data": {
                            "selection": {
                                "\\.(js)$": true,
                                "\\.min\\.(js)$": false,
                                "^\\.\\/node_modules($|\\/)": false,
                                "^\\.\\/templates($|\\/)": false
                            },
                            "setDiffs": {
                                "/(@version\\s+)\\d+(\\.\\d+)*": "$1%version%"
                            },
                            "targetVersion": "%version%"
                        }
                    },
                    {
                        "command_group": true,
                        "mode": "serie",
                        "actions": [
                            {
                                "action": "jsdoc",
                                "data": {
                                    "private": true,
                                    "selection": {
                                        "\\.(js)$": true,
                                        "\\.min\\.(js)$": false,
                                        "^\\.\\/node_modules($|\\/)": false,
                                        "^\\.\\/templates($|\\/)": false,
                                        "^\\.\\/actions\\/ithoughts-index-doc\\.js": false
                                    },
                                    "template": "default",
                                    "template.bck": "gerkindevelopment",
                                    "typepath": "javascript",
									"destinationPath": "%destinationPath%"
                                },
                                "arguments": {
                                    "destinationPath": {
                                        "type": "regex_replace",
                                        "value": "%documentation.base.path%%version%",
                                        "search": "(\\d+)\\.(\\d+)\\.(\\d+)",
                                        "replacement": "$3$2$1"
                                    }
                                }
                            },
                            {
                                "action": "ithoughts-index-doc",
                                "data": {
                                    "template": "ithoughts-index-doc",
                                    "head_links": {
                                        "GerkinDevelopment": "https://www.gerkindevelopment.net/",
                                        "Back to Documentation Index": "/"
                                    },
                                    "doc_links": [
                                        {
                                            "labels": {
                                                "main": "JavaScript",
                                                "sub": "Node.js"
                                            },
                                            "image": "/images/serverside.jpg",
                                            "link": "/javascript/index.html"
                                        }
                                    ]
                                }
                            },
                            {
                                "action": "version-history",
                                "data": {
                                    "template": "ithoughts-index-doc"
                                }
                            }
                        ]
                    },
                    {
                        "command_group": true,
                        "mode": "parallel",
                        "actions": [
                            {
                                "action": "git",
                                "data": {
                                    "actions": [
                                        {
                                            "action": "commit",
                                            "data": {
                                                "message": "Release version %VERSION%"
                                            }
                                        },
                                        {
                                            "action": "tag",
                                            "data": {
                                                "label": "v%VERSION%",
                                                "message": "Release version %VERSION%"
                                            }
                                        },
                                        {
                                            "action": "push"
                                        }
                                    ]
                                }
                            },
                            {
                                "action": "git",
                                "data": {
                                    "path": "/mnt/workdata/nodejs/documentation/deployer.js",
                                    "actions": [
                                        {
                                            "action": "commit",
                                            "data": {
                                                "message": "Release version %VERSION%"
                                            }
                                        },
                                        {
                                            "action": "tag",
                                            "data": {
                                                "label": "v%VERSION%",
                                                "message": "Release version %VERSION%"
                                            }
                                        },
                                        {
                                            "action": "push"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "versions": {
            "0.1": "http://deployer.gerkindevelopment.net/0.1",
            "0.2": "http://deployer.gerkindevelopment.net/0.2"
